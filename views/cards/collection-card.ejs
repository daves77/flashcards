<div class="col-span-4 md:col-span-2 lg:col-span-1  h-100 mt-4">
  <a href="">
    <div class="bg-white rounded shadow-lg p-4 h-100 border-b-8 border-transparent hover:border-blue-500">
      <div class="flex-row-reverse justify-between">
        <h3 class="text-2xl font-medium text-gray-700">
          <%= collection.name %>
        </h3>
        <div class="mt-4">
          <% collection.tags.forEach(tag=> { %>
            <span
              class="inline-flex items-center px-2.5 py-0.5 rounded-md text-sm font-medium bg-blue-100 text-blue-800">
              <%= tag %>
            </span>
            <% }) %>
        </div>
        <div class="flex justify-end">
          <div class="text-purple-700">
            View
          </div>
          <span class="items-center">
            <svg class="my-auto" width="20" height="20" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M10.707 17.707L16.414 12L10.707 6.29303L9.293 7.70703L13.586 12L9.293 16.293L10.707 17.707Z"
                fill="#6D28D9" />
            </svg>
          </span>
        </div>
      </div>
    </div>
  </a>
</div>